{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "cross-env NODE_ENV=development node ./build/server.js",
        "start-watch": "cross-env NODE_ENV=development nodemon",
        "build": "tsc && cpy src/log4js.json build/ && cpy frontend/**/* build/  --parents",
        "postinstall": "npm run build",
        "test": "nyc mocha src/**/*.spec.ts",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "test:watch": "mocha -r ts-node/register src/**/*.spec.ts -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "mongodb": "^3.1.6",
        "mongoose": "^5.4.19",
        "pbkdf2": "^3.0.16",
        "reflect-metadata": "^0.1.12",
        "request": "^2.88.0",
        "request-promise": "^4.2.2",
        "tslint": "^5.14.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.0.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/inversify": "^2.0.33",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/load-json-file": "^2.0.7",
        "@types/mocha": "^5.2.5",
        "@types/mongodb": "^3.1.9",
        "@types/mongoose": "^5.3.23",
        "@types/node": "^10.9.4",
        "@types/pbkdf2": "^3.0.0",
        "@types/request-promise": "^4.1.42",
        "@types/sinon": "^7.0.10",
        "@types/uuid": "^3.4.4",
        "chai": "^4.1.2",
        "codecov": "^3.2.0",
        "cpy-cli": "^2.0.0",
        "cross-env": "^5.2.0",
        "mocha": "^5.2.0",
        "mongodb-memory-server": "^4.2.1",
        "node-mocks-http": "^1.7.3",
        "nodemon": "^1.18.10",
        "nyc": "^13.3.0",
        "supertest": "^3.0.0",
        "ts-node": "^7.0.1",
        "typemoq": "^2.1.0"
    },
    "nyc": {
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "engines": {
        "node": "8.12.0"
    }
}
